    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/inderpreet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listOfItemsTextView"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="286dp"
            android:layout_height="41dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Click here to add your options"
            android:imeActionLabel="Add"
            android:inputType="text" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="78dp"
            android:layout_height="43dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="78dp"
            android:text="Add" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/finishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#22F32A"
        android:text="Finish"
        app:layout_constraintTop_toBottomOf="@id/inderpreet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/delButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#E11616"
        android:text="New list"
        app:layout_constraintTop_toBottomOf="@id/inderpreet"
        app:layout_constraintEnd_toStartOf="@+id/finishButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

